 <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Tables</h1>
          <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>_id</th>
                      <th>name</th>
                      <th>image</th>
                      <th>thumbnail</th>
                      <th>shortDescription</th>
                      <th>categoryId</th>
                      <th>salePrice</th>
                    </tr>
                  </thead>

                  <tbody>

                  {{#each products}}
                   <tr>
                        <td><a href="products/{{id}}">{{id}}</a></td>
                        <td>{{name}}</td>
                        <td>{{image}}</td>
                        <td>{{thumbnail}}</td>
                        <td>{{shortDescription}}</td>
                        <td>{{categoryId}}</td>
                        <td>{{salePrice}}</td>
                      </tr>
                  {{else}}
                  <li>No products!</li>
                  {{/each}}

{{#if productsDetail}}
                                     <tr>
                                          <td>{{productsDetail.id}}</td>
                                          <td>{{productsDetail.name}}</td>
                                          <td>{{productsDetail.image}}</td>
                                          <td>{{productsDetail.thumbnail}}</td>
                                          <td>{{productsDetail.shortDescription}}</td>
                                          <td>{{productsDetail.categoryId}}</td>
                                          <td>{{productsDetail.salePrice}}</td>
                                        </tr>

{{/if}}


                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>